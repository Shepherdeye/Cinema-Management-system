<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinematic_Assets_Management</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Cinematic_Assets_Management.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header class="bg-dark">
        <nav class="  navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark  box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    Cinema
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row">
                <!-- About -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold text-danger">🎬 Cinema</h5>
                    <p class="text-secondary">
                        Your gateway to the latest and greatest movies.
                        Book your tickets online and enjoy a world of cinema from your seat.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-secondary text-decoration-none">Home</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Movies</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Cinemas</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Contact</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold">Contact Us</h5>
                    <p class="text-secondary mb-1"><i class="bi bi-geo-alt"></i> 123 Movie Street, Film City</p>
                    <p class="text-secondary mb-1"><i class="bi bi-telephone"></i> +1 234 567 890</p>
                    <p class="text-secondary"><i class="bi bi-envelope"></i> info@cinema.com</p>

                    <!-- Social Icons -->
                    <div>
                        <a href="#" class="text-secondary me-3"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-secondary me-3"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-secondary me-3"><i class="bi bi-instagram fs-4"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary">

            <div class="text-center text-secondary">
                &copy; 2025 Cinema. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
