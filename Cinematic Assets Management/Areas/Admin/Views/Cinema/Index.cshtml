@model List<Cinema>


<div class="container mt-5">
    <h2 class="mb-4 text-center">All Cinemas</h2>

    <a class="btn btn-primary float-end mb-3" href="/admin/cinema/create">New</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                   <th scope="col">Logo</th>
                    <th scope="col">Address</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var cinema in Model)
                    {
                        <tr class="text-center">
                            <td>@cinema.Id</td>
                            <td>@cinema.Name</td>
                            <td>@if (cinema.Description.Length > 10)
                                {
                                    @cinema.Description.Substring(0, 10)
                                }
                            </td>
                            <td>
                                @cinema.Name Logo
                            </td>
                            <td>@cinema.Address</td>
                            <td>
                                <a href="/admin/cinema/details/@cinema.Id" class="btn btn-info btn-sm me-1">View All</a>
                                <a href="/admin/cinema/edit/@cinema.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                <a href="/admin/cinema/delete/@cinema.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this cinema?');">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No cinemas found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
